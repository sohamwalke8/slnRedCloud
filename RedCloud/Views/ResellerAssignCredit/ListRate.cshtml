<form method="post" id="user-query-form" action="/OrganizationAdmin/AddOrganizationAdmin" novalidate="novalidate">
    <div class="card-body">

        <div class="card">
            <div class="card-header" style="background-color:#007BFF">
                <h3 class="card-title" style="color:white; font-weight:bold;font-size:23px;"> <i class="fa-solid fa-dollar-sign"></i>  Assign Credit</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12">
                            <p>
                                <a class="btn btn-primary" asp-action="AddRate" asp-controller="ResellerAssignCredit"
                                   style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem; float:right; margin-bottom:10px">
                                    Add Rate
                                </a>
                            </p>
                            @* <label for="entriesPerPage">
                                Show Entries
                                <select id="entriesPerPage" class="custom-select custom-select-sm form-control form-control-sm">
                                    <option value="10">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select>
                            </label> *@
                            <table id="dataTable" class="table table-bordered table-striped dataTable dtr-inline" aria-describedby="dataTable_info">
                                <thead>
                                    <tr>
                                        <th>Organization </th>
                                        <th>Purchased credits</th>
                                        <th>Type</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in @ViewBag.listRate)
                                    {
                                        <tr>
                                            <td>
                                                @item.GetAllAssignCreditName
                                            </td>
                                            <td>
                                                1000 @* @item.RateAssignCreditId *@
                                            </td>
                                            <td>
                                                @item.GetAllAssignCreditTypeName
                                            </td>
                                           
                                             <td>
                                                <a asp-action="AssignCreditDetailsById" asp-controller="ResellerAssignCredit" asp-route-id="@item.RateAssignCreditId" class="btn-action">
                                                    <i class="fa-solid fa-eye" style="color: #050505;"></i>
                                                </a>

                                                <a asp-action="EditRate" asp-controller="ResellerAssignCredit" asp-route-id=" @item.RateAssignCreditId" class="btn-action">
                                                    <i class="fa-regular fa-pen-to-square" style="color: #131111;"></i>
                                                </a>
                                                <a asp-action="" asp-controller="" asp-route-id="@item.RateAssignCreditId" class="delete-btn btn-action" data-id="@item.RateAssignCreditId">
                                                    <i class="fa-solid fa-circle-notch" style="color: #FF8C00;"></i>
                                                </a>

                                                @* <a class="delete-btn btn-action" data-id="@item.RateAssignCreditId" data-name="@item.GetAllAssignCreditName" >
                                                    <i class="fa-solid fa-trash" style="color: #cb1010;"></i>
                                                </a> *@

                                                <a class="delete-btn btn-action" data-id=" @item.RateAssignCreditId" data-name="@item.RateAssignCreditId">
                                                    <i class="fa-solid fa-dollar-sign"></i>
                                                </a>
                                            </td> 
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>


    </div>

</form>

