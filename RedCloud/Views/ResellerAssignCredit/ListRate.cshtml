    .dt-button {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 0.25rem;
        padding: 0.5rem 1rem;
        margin: 0.2rem;
        font-size: 0.875rem;
        cursor: pointer;
    }

    .dt-button:hover {
        background-color: #0056b3;
    }

