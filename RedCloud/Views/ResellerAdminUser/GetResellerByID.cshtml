@model ReSellerAdmindto
@using RedCloud.Application.Features.ResellerAdminuser.Queries;

@{
    Layout = "_Layout";
}

<style>
    .admin-details {
        margin-bottom: 30px;
        margin-top: 20px;
        /* Add some space between sections */
    }

    .card-custom {
        background-color: #f8f9fa;
        /* Light gray background */ border-radius: 10px;
        margin-top: 20px;
        margin-left: 120px;
        width: 900px;
    }

    .card-header-custom {
        background-color: #007BFF;
        /* Dark background for header */ color: #fff;
        border-radius: 10px 10px 0 0;
        padding: 10px 20px;
    }

        .card-header-custom .logo-text {
            display: flex;
            align-items: center;
        }

            .card-header-custom .logo-text img {
                width: 50px;
                margin-right: 10px;
            }

        .card-header-custom .buttons {
            margin-left: auto;
        }

            .card-header-custom .buttons a {
                color: #fff;
                margin-left: 10px;
            }
</style>

<div class="container mt-5" style="align-content:center">
    <div class="card card-custom">
        <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
            <div class="logo-text">
                <img src="https://files.axshare.com/gsc/5886BD/e2/ee/cb/e2eecb648f19481093d6b12d28c3beb3/images/view_user_details/u27.svg?pageId=45d84280-2bba-453f-a23a-42e8aeab14be" alt="ReSeller Admin Logo">
                <strong>View ReSeller Details</strong>
            </div>
            <div class="buttons">
                <a href="@Url.Action("ViewResellerUsers", "ResellerUser", new { id = Model.ResellerAdminUserId })" class="btn btn-outline-light">
                   View Users
                </a>
                <a href="@Url.Action("UpdateResellerAdminUser", new { id = Model.ResellerAdminUserId })" class="btn btn-outline-light">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>
                <a href="@Url.Action("ViewallResellerAdmin")" class="btn btn-outline-light">
                    <i class="fa-solid fa-circle-left"></i>
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row" style="margin-left:20px">
                <div class="col-md-6">
                    @Html.HiddenFor(x => x.ResellerAdminUserId)
                    <div class="admin-details">
                        <p><strong>Reseller Name:</strong> @Html.DisplayFor(model => model.ResellerName)</p>
                        <p><strong>EIN:</strong> @Html.DisplayFor(model => model.EIN)</p>
                        <p><strong>Address Line 1:</strong> @Html.DisplayFor(model => model.AddressLine1)</p>
                        <p><strong>Address Line 2:</strong> @Html.DisplayFor(model => model.AddressLine2)</p>
                        <p><strong>City:</strong> @Html.DisplayFor(model => model.CityName)</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="admin-details">
                        <p><strong>State:</strong> @Html.DisplayFor(model => model.StateName)</p>
                        <p><strong>Zip Code:</strong> @Html.DisplayFor(model => model.ZipCode)</p>
                        <p><strong>Company URL:</strong> @Html.DisplayFor(model => model.CompanyURL)</p>
                        <p><strong>Company Support Email:</strong> @Html.DisplayFor(model => model.CompanySupportEmail)</p>
                        <p><strong>Red Cloud Admin:</strong> @Html.DisplayFor(model => model.RedCloudAdmin)</p>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmModal">Block</button>
                <a href="@Url.Action("ViewallResellerAdmin")" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap modal markup -->
<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to block this User?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmBlock">OK</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#confirmBlock').click(function () {
                var itemId = '@Model.ResellerAdminUserId';
                $.ajax({
                    url: '@Url.Action("Block", "ResellerAdminUser")',
                    type: 'PUT',
                    data: { id: itemId },
                    success: function (result) {
                        window.location.href = '@Url.Action("ViewallResellerAdmin", "ResellerAdminUser")';
                    },
                    error: function () {
                        // Handle error
                    }
                });
            });
        });
    </script>
}
