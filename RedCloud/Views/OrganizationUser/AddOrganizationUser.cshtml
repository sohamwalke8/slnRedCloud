@model RedCloud.ViewModel.OrganizationUserVM;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Organization User</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        /* Add your custom CSS styles here */
        /* Optional: Add custom styles for form elements */
    </style>
</head>

<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title mb-0">Create Organization Admin</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- Form Start -->
                    <form asp-action="AddOrganizationUser" asp-controller="OrganizationUser" method="post" id="user-query-form" class="p-3">
                        <div class="card-body">
                            <input type="hidden" asp-for="OrganizationAdminId" value="@Model.OrganizationAdminId" />

                            <div class="form-group">
                                <label for="OrganizationUserFirstName">First Name</label>
                                <input asp-for="OrganizationUserFirstName" class="form-control" id="OrganizationUserFirstName" placeholder="Enter First Name">
                                <span asp-validation-for="OrganizationUserFirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="OrganizationUserLastName">Last Name</label>
                                <input asp-for="OrganizationUserLastName" class="form-control" id="OrganizationUserLastName" placeholder="Enter Last Name">
                                <span asp-validation-for="OrganizationUserLastName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="OrganizationUserEmail">Email</label>
                                <input asp-for="OrganizationUserEmail" class="form-control" id="OrganizationUserEmail" placeholder="Enter Email">
                                <span asp-validation-for="OrganizationUserEmail" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            @* <a class="btn btn-secondary float-right" asp-action="ViewOrganizationUsers" asp-controller="OrganizationUser" new { id=Model.OrganizationAdminId } style="margin-left:5px">Back</a> *@
                            <a href="@Url.Action("ViewOrganizationUsers", "OrganizationUser", new { id = Model.OrganizationAdminId })" class="btn btn-secondary float-right" style="margin-left:5px">Back</a>
                            <button type="submit" class="btn btn-primary float-right">Create</button>
                        </div>
                    </form>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col-md-6 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>

@section Scripts {
    <partial name="_ValIdationScriptsPartial" />
}