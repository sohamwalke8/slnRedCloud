<style>
    .rateTable {
        width: 100% !important;
    }

    .card-header {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #007bff;
        color: white;
    }

    th.no-sort {
        pointer-events: none;
    }

        th.no-sort .sorting, th.no-sort .sorting_asc, th.no-sort .sorting_desc {
            display: none !important;
        }

    .card-title {
        margin: 0;
    }

    .card-body {
        padding: 20px;
    }

    .dt-search {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 20px;
    }

    .table {
        margin-bottom: 0;
    }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

    .modal-header {
        background-color: #dc3545;
        color: white;
    }

    .modal-footer .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .container {
        max-width: 100%;
    }
</style>

@model IEnumerable<RedCloud.Domain.Entities.GetRate>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "All Rates";
    Layout = "_Layout";
}

<form method="post" id="user-query-form" action="/OrganizationAdmin/AddOrganizationAdmin" novalidate="novalidate">
    <div class="card-body">
        <div class="container mt-4">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h3 class="card-title"><strong>Assign Rate </strong></h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-12 dt-search">
                            <a asp-action="AddRate" asp-controller="Rate" class="btn btn-primary">Add Rate</a>
                        </div>
                    </div>
                    <table id="rateTable" class="table table-bordered table-striped" style="width:100% !important;">
                        <thead>
                            <tr>
                                <th hidden>Rate ID</th>
                                <th>Reseller Name</th>
                                <th>Monthly Number</th>
                                <th>Users</th>
                                <th class="no-sort">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rate in Model)
                            {
                                <tr>
                                    <td hidden>@rate.GetRateId</td>
                                    <td>@rate.GetResellerName</td>
                                    <td>@rate.GetMonthlyNumber</td>
                                    <td>@rate.GetUsers</td>
                                    <td>
                                        <a href="@Url.Action("GetRateById", "Rate", new { id = rate.GetRateId })" class="text-primary">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("UpdateRate", "Rate", new { id = rate.GetRateId })" class="text-warning ml-3">
                                            <i class="fa-regular fa-pen-to-square"></i>
                                        </a>
                                        <a href="javascript:void(0);" class="delete-btn text-danger ml-3" data-id="@rate.GetRateId" data-toggle="modal" data-target="#deleteModal">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this rate?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete" data-dismiss="modal">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#rateTable').DataTable({
                searching: true,
                paging: true, columnDefs: [
                    { targets: 'no-sort', orderable: false }
                ],
            });

            var deleteUrl = "";
            var deleteRow;

            $('.delete-btn').on('click', function () {
                var rateId = $(this).data('id');
                deleteUrl = '@Url.Action("DeleteRate", "Rate")' + '?id=' + rateId;
                deleteRow = $(this).closest('tr');
            });

            $('#confirmDelete').on('click', function () {
                $.ajax({
                    url: deleteUrl,
                    type: 'POST',
                    success: function (result) {
                        
                        $('#deleteModal').modal('hide'); // Hide the modal
                        deleteRow.remove(); // Remove the row from the table
                        toastr.success('Rate deleted successfully'); // Show Toastr message
                    },
                    error: function () {
                        toastr.error('Error deleting rate');
                    }
                });
            });

            // // Ensure modal closes correctly
            // $('#deleteModal').on('hidden.bs.modal', function () {
            //     deleteUrl = "";
            //     deleteRow = null;
            // });
        });
    </script>
}
